package ex1_13;

public class Ball {
	
	private float x;
	private float y;
	private int radius;
	private float xDelta;
	private float yDelta;
	
	public Ball (int x, int y, int radius, int speed, int direction) {
		this.x = x;
		this.y = y; 
		this.radius = radius;
		this.xDelta = speed;
		this.yDelta = direction;
	}

}
